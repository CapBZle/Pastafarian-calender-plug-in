<!DOCTYPE html><html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Pastafarian Holiday</title>
  <style>
    body {
      font-family: sans-serif;
      text-align: center;
      padding: 2em;
      background-color: #fffbe6;
    }
    #holiday {
      font-size: 1.5em;
      margin-top: 2em;
    }
  </style>
</head>
<body>
  <h1>RAmen! üçù</h1>
  <div id="holiday">Loading today's Pastafarian holiday...</div>  <script>
    fetch("https://www.pastafariancalendar.com/calendar.ics")
      .then(response => response.text())
      .then(text => {
        const today = new Date().toISOString().split("T")[0].replace(/-/g, "");
        const events = text.split("BEGIN:VEVENT");
        let holiday = "No holiday today. Maybe it's a beer break? üç∫";

        for (const e of events) {
          if (e.includes(`DTSTART;VALUE=DATE:${today}`)) {
            const match = e.match(/SUMMARY:(.*)/);
            if (match) {
              holiday = match[1].trim();
              break;
            }
          }
        }

        document.getElementById("holiday").textContent = holiday;
      })
      .catch(() => {
        document.getElementById("holiday").textContent = "Could not load holiday data. Blame the pirates.";
      });
  </script></body>
</html>
